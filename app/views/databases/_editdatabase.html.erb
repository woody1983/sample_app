<div id="modal_edit" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
              <a class="close" data-dismiss="modal_edit" >&times;</a>
              <h3>是我,撑场面的Title条君</h3>
            </div>
            <div class="modal-body">

<%= form_for(@databases) do |f| %>

      <%= f.label :db_name %>
      <%= f.text_field :db_name %>

      <%= f.label :db_project %>
      <%= f.text_field :db_project %>

      <%= f.label :db_desc %>
      <%= f.text_area :db_desc, "rows" => 3 %>

            </div>
            <div class="modal-footer">
                 <%= f.submit "Edit Databases", class: "btn btn-primary" %>
                 <a href="#" class="btn" data-dismiss="modal" >Close</a>
           <% end %>
            </div>
</div>
<!-- end edit -->
